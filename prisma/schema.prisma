generator client_frontend {
  provider = "prisma-client-js"
}

generator client_backend {
  provider             = "prisma-client-py"
  recursive_type_depth = 5
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// enum SongStatus {
